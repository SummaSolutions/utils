    <div class="title"><span><?php echo $cmsHelper->__('Generated export file:'); ?></span></div>
    <div>
        <span class="filename">
            <a href="<?php echo $result->getDownloadUrl(); ?>">
                <?php echo $result->getFilename(); ?>
            </a>
        </span>
    </div>
    <?php else: ?>
    <div class="messages">
        <div class="error-msg">
            <span>
                <?php echo $result->getErrorMessage(); ?>
            </span>
        </div>
    <div>
    <?php endif; ?>
