<config>
    <sections>
        <cms>
            <groups>
                <summa_export_import translate="label" module="summa_cms">
                    <label>CMS Export/Import Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>500</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <destination_folder translate="label comment" module="summa_cms">
                            <label>Destination folder</label>
                            <comment><![CDATA[The destination folder for the exported/imported files.<br />Relative to Magento's root dir.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </destination_folder>
                        <auto_resolve_dependecies_by_default translate="label comment" module="summa_cms">
                            <label>Auto-resolve dependencies by default</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </auto_resolve_dependecies_by_default>
                        <upload_and_import_by_default translate="label comment" module="summa_cms">
                            <label>Upload and Import by default</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </upload_and_import_by_default>
                        <include_jquery translate="label comment" module="summa_cms">
                            <label>Include jQuery</label>
                            <comment><![CDATA[jQuery version to include is 1.9.1 minified.<br />You should <strong>choose No if jQuery is already included</strong> in adminhtml.<br /><strong>Note:</strong> This extension does not depends on jQuery.<br />If jQuery is not found, then the extension will not use js.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </include_jquery>
                    </fields>
                </summa_export_import>
            </groups>
        </cms>
    </sections>
</config>
